<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox prefHeight="645.0" prefWidth="770.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.CustomerBasketController">
	<children>
		<AnchorPane maxHeight="-1.0" maxWidth="-1.0" VBox.vgrow="ALWAYS">
			<children>
				<Label alignment="CENTER" layoutY="48.0" prefHeight="44.0" prefWidth="770.0"
				       style="&#10;" text="Basket" textAlignment="CENTER" wrapText="false">
					<font>
						<Font size="36.0"/>
					</font>
				</Label>
				<Button layoutX="609.0" layoutY="549.0" mnemonicParsing="false" onAction="#back" text="â—„ BACK">
					<font>
						<Font size="24.0"/>
					</font>
				</Button>
				<Button layoutX="253.0" layoutY="481.0" mnemonicParsing="false"
				        onAction="#removeProductFromBasket" text="Remove From Basket" textFill="RED">
					<font>
						<Font size="24.0"/>
					</font>
				</Button>
				<Button layoutX="344.0" layoutY="549.0" mnemonicParsing="false"
				        onAction="#buyProducts" text="BUY" textFill="GREEN">
					<font>
						<Font name="System Bold" size="24.0"/>
					</font>
				</Button>
				<TableView fx:id="tableViewBasket" layoutX="56.0" layoutY="123.0" prefHeight="317.0" prefWidth="666.0">
					<columns>
						<TableColumn fx:id="tableColumnId" editable="false" maxWidth="95.0" minWidth="95.0"
						             prefWidth="95.0"
						             resizable="false" text="Product ID"/>
						<TableColumn fx:id="tableColumnName" editable="false" maxWidth="380.0" minWidth="380.0"
						             prefWidth="380.0" resizable="false" text="Product Name"/>
						<TableColumn fx:id="tableColumnPrice" editable="false" maxWidth="98.0" minWidth="98.0"
						             prefWidth="98.0" resizable="false" text="Price"/>
						<TableColumn fx:id="tableColumnQuantity" editable="false" maxWidth="92.0" minWidth="92.0"
						             prefWidth="92.0" resizable="false" text="Quantity"/>
					</columns>
				</TableView>
			</children>
		</AnchorPane>
	</children>
</VBox>
